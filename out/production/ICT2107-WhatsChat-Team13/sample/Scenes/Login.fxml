<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.geometry.Insets?>

<GridPane fx:controller="sample.Controllers.LoginController" stylesheets="@../Assets/css/myCss.css" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" />
    </columnConstraints>
    <StackPane fx:id="defocusHelper" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="675.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <ImageView fx:id="loginBackdrop" fitHeight="675.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true" />
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="350.0" opacity="0.59" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="450.0" />
            <ImageView fx:id="appLogo" fitHeight="100.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                <StackPane.margin>
                    <Insets bottom="150.0" />
                </StackPane.margin>
            </ImageView>
            <TextField fx:id="usernameField" maxHeight="40.0" maxWidth="250.0" minHeight="40.0" minWidth="250.0" prefHeight="40.0" prefWidth="250.0" promptText="Username">
                <StackPane.margin>
                    <Insets top="50"/>
                </StackPane.margin>
            </TextField>
            <Button fx:id="loginBtn" styleClass="record-sales" maxHeight="40.0" maxWidth="250.0" minHeight="50.0" minWidth="250.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="250.0" text="Let's Go!" onAction="#loginHandler">
                <StackPane.margin>
                    <Insets top="160.0" />
                </StackPane.margin>
            </Button>
        </children>
    </StackPane>
</GridPane>